{% extends base %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Objet</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for mailLog in mailLogs %}
                <tr data-url="{{ path('maillog_view', {id: mailLog.id, role: role}) }}">
                    <td>{{ mailLog.sentAt|date('d/m/Y') }}</td>
                    <td>{{ mailLog.subject }}</td>
                    <td>
                        <a href="{{ path('maillog_delete', {id: mailLog.id, role: role}) }}" data-confirm="Confirmez-vous la suppression de ce mail?">
                            <i class="fas fa-trash-alt text-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('contact_form', {role: role, user: app.user.id}) }}" class="btn btn-success">Nouveau</a>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function() {
            $('.table').drawDataTable({
                options : {
                    order: [[0, 'desc']],
                }
            });
        });
    </script>
{% endblock %}
