{% extends base %}

{% block body %}
    {% if user.id is not empty and (app.user.id == user.id or is_granted('ROLE_ADMIN')) %}
        {% if isAccount %}
            <a href="{{ path('user_profil_password', {role: role}) }}" class="btn btn-success">Changer les identifiants</a>
        {% else %}
            <a href="{{ path('user_password', {role: role, id: user.id}) }}" class="btn btn-success">Changer les identifiants</a>
        {% endif %}
    {% endif %}
    {{ form_start(form) }}
        {% if form.roles is defined %}
            {{ form_row(form.roles) }}
        {% endif %}
        {{ form_row(form.email) }}
        {% if form.oldPassword is defined %}
            {{ form_row(form.oldPassword) }}
        {% endif %}
        {% if form.plainPassword is defined %}
            {{ form_row(form.plainPassword) }}
        {% endif %}
        {{ form_row(form.broadcastList) }}
        {% if form.denomination is defined %}
            {{ form_row(form.denomination) }}
        {% endif %}
        {% if form.payto is defined %}
            {{ form_row(form.payto) }}
        {% endif %}
        {{ form_row(form.lastname) }}
        {{ form_row(form.firstname) }}
        {% if form.children.parent is defined %}
            {{ form_row(form.children.parent) }}
        {% endif %}
        {{ form_row(form.address) }}
        {{ form_row(form.city) }}
        {{ form_row(form.zipCode) }}
        {{ form_row(form.phoneNumbers) }}
        {% if form.color is defined %}
            {{ form_row(form.color) }}
        {% endif %}
        {% if form.deleveries is defined %}
            {{ form_row(form.deleveries) }}
        {% endif %}
        {% if form.portfolio is defined %}
            {{ form_row(form.portfolio) }}
        {% endif %}
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
