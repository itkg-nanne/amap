{% extends base %}

{% block body %}
    <table class="table table-striped table-hover" id="document">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Role</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for document in documents %}
                <tr data-url="{{ path('document_form', {id: document.id}) }}">
                    <td>{{ document.name }}</td>
                    <td>{{ document.role }}</td>
                    <td>
                        <a href="{{ path('document_delete', {id: document.id}) }}" data-confirm="Confirmez-vous la suppression de ce document?">
                            <i class="fas fa-trash-alt text-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('document_form') }}" class="btn btn-block btn-success">Nouveau</a>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function() {
            $('.table').drawDataTable({
                options : {
                    order: [[0, 'asc']],
                }
            });
        });
    </script>
{% endblock %}
